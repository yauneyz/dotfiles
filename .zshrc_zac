HISTSIZE=1000
HISTFILESIZE=2000

export LC_ALL=en_IN.UTF-8
export LANG=en_IN.UTF-8

export PATH=/usr/local/cuda/bin:$PATH
export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH

export PULSE_RUNTIME_PATH=/run/user/$(id -u)/pulse

export PATH="$PATH:$HOME/anaconda3/bin"
export PATH="$PATH:$HOME/opt/openmpi/bin"
export PATH="$HOME/.local/lib/python3.12/site-packages:$PATH"
export PATH="$HOME/.tools:$PATH"

export XDG_CONFIG_HOME="$HOME/.config"
# Don't know why this used to be set like this
# export XDG_RUNTIME_DIR=""
export XDG_RUNTIME_DIR="/run/user/$(id -u)"


cat ~/.cache/wal/sequences

# For local coding agents:
export OPENAI_API_BASE=http://127.0.0.1:11434/v1
export OPENAI_API_KEY=local-anything

# Environment variables
export WANDB_API_KEY="fd75061e394bd7a96bc63a2cae013a4af7d847f6"

# My personal aliases
source ~/.bash_aliases
