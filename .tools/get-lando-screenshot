#!/usr/bin/env bash
# get-lando-screenshot
# Capture screenshot pair (scramble/complete) with auto-incrementing identifier
# Uses capture_pair internally, but passes custom geometries

set -euo pipefail

CONFIG_DIR="$HOME/.config/record-lando"
STATE_FILE="$CONFIG_DIR/state"

# Check if setup has been run
if [ ! -f "$STATE_FILE" ]; then
    echo "Error: Not configured. Run record-lando-setup first."
    notify-send -u critical "Capture Error" "Run record-lando-setup first"
    exit 1
fi

# Load state
source "$STATE_FILE"

# Function to convert index to identifier
get_identifier() {
    local index=$1

    if [ $index -lt $NUM_CHALLENGES ]; then
        echo "ch-$((index + 1))"
    elif [ $index -eq $NUM_CHALLENGES ]; then
        echo "hero"
    elif [ $index -lt $((NUM_CHALLENGES + 1 + NUM_EXTENSIONS)) ]; then
        local ext_num=$((index - NUM_CHALLENGES))
        echo "ext-$ext_num"
    else
        echo "DONE"
    fi
}

# Function to check if done
is_done() {
    local index=$1
    [ $index -ge $((NUM_CHALLENGES + 1 + NUM_EXTENSIONS)) ]
}

# Function to print all counter states
print_status() {
    local video_id=$(get_identifier $VIDEO_INDEX)
    local thumb_id=$(get_identifier $THUMBNAIL_INDEX)
    local screenshot_id=$(get_identifier $SCREENSHOT_INDEX)
    echo "Video: $video_id  Thumbnail: $thumb_id  Screenshot: $screenshot_id"
}

# Get current identifier
CURRENT_ID=$(get_identifier $SCREENSHOT_INDEX)

# Check if we're done
if is_done $SCREENSHOT_INDEX; then
    echo "Screenshot capture complete!"
    print_status
    notify-send -u normal "Capture Complete" "All screenshot captures finished!"
    exit 0
fi

# Check if grim exists
if ! command -v grim >/dev/null 2>&1; then
    echo "Error: grim not found"
    notify-send -u critical "Capture Error" "grim not found"
    exit 1
fi

# Capture screenshot pair using the geometries from state
OUTDIR="${OUTPUT_DIR}/${NAME}"
mkdir -p "$OUTDIR"

SCRAMBLE_OUT="${OUTDIR}/scramble-${NAME}-${CURRENT_ID}.png"
COMPLETE_OUT="${OUTDIR}/complete-${NAME}-${CURRENT_ID}.png"

echo "Capturing scramble -> ${SCRAMBLE_OUT}"
grim -g "${SCRAMBLE_GEOM}" "${SCRAMBLE_OUT}"

echo "Capturing complete -> ${COMPLETE_OUT}"
grim -g "${COMPLETE_GEOM}" "${COMPLETE_OUT}"

# Increment SCREENSHOT_INDEX
NEW_INDEX=$((SCREENSHOT_INDEX + 1))

# Update state file
sed -i "s/^SCREENSHOT_INDEX=.*/SCREENSHOT_INDEX=$NEW_INDEX/" "$STATE_FILE"
sed -i "s/^LAST_MODIFIED=.*/LAST_MODIFIED=\"SCREENSHOT\"/" "$STATE_FILE"

# Reload state to get updated values
source "$STATE_FILE"

# Get next identifier
NEXT_ID=$(get_identifier $NEW_INDEX)

echo "Captured scramble/complete-${NAME}-${CURRENT_ID}.png"
print_status

if is_done $NEW_INDEX; then
    notify-send -u normal "Screenshots Complete" "Captured ${CURRENT_ID}\nAll screenshot captures finished!"
else
    notify-send -u normal "Screenshots Captured" "Captured ${CURRENT_ID}\nNext screenshot: ${NEXT_ID}"
fi
